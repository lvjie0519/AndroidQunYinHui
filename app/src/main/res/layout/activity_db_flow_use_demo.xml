<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.androidqunyinhui.dbflow.DbFlowUseDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_db_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询所有"/>
        <Button
            android:id="@+id/btn_db_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加数据"/>
        <Button
            android:id="@+id/btn_db_alter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改数据"/>
        <Button
            android:id="@+id/btn_db_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除数据"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_db_input"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btn_db_select_sigle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询某个数据"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_db_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
